<h1><%= @album.name %></h1>


<h2>Images:</h2>

<% @album.images.each do |image| %>
  <div>
    <%= image_tag image.image.url(:thumb) %>
    <p>Caption: <%= image.caption %></p>
    <p>Uploaded by: <%= image.album.owner %></p>
  </div>
<% end %>

<% if current_user && current_user == @album.user %>
 <%= link_to "Add Image", new_album_image_path(@album) %>
  <%= link_to 'Edit Album', edit_album_path(@album) %>
 <!-- <#%= link_to 'Delete Album', @album, method: :delete, data: { confirm: 'Are you sure?' } %>-->
<% end %>

<%= link_to 'Back to Albums', albums_path %>